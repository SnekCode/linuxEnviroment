# Python Aliases
alias py='python3'

# load zsh
alias reloadsh='source ~/.zshrc'

# xclip
alias xclipf='xclip -sel clip < '
alias copy='xclip -sel clip'

#Android Studio
alias studio='nohup sh /usr/bin/android-studio/bin/studio.sh & > /dev/null'
alias adb='~/Android/Sdk/platform-tools/adb'

# Ubuntu Login Loop Bug Fix
# Press ctl + alt + F3 to enter login screen
alias login_loop_bug_fix='sudo apt-get -y purge gdm3 && sudo apt-get install -y gdm3 &&sudo reboot'
